
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xinlingfamen.app.core.home.MineFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rl_commonInfo"
        android:layout_height="@dimen/actionbar_item_height">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/actionbar_height"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/body_padding_medium"
            android:drawablePadding="@dimen/intro_margin_5"
            android:gravity="center_vertical"
            android:text="信息公告"
            android:textColor="@color/grey"
            android:textSize="15sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawablePadding="@dimen/intro_margin_5"
            android:drawableRight="@drawable/arrow_right"
            android:textColor="@color/grey"
            android:textSize="18sp" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="1dp" android:background="@color/grey"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rl_checkAppUpdate"
        android:layout_height="@dimen/actionbar_item_height">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/actionbar_height"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/body_padding_medium"
            android:drawablePadding="@dimen/intro_margin_5"
            android:gravity="center_vertical"
            android:text="检查更新"
            android:textColor="@color/grey"
            android:textSize="15sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawablePadding="@dimen/intro_margin_5"
            android:drawableRight="@drawable/arrow_right"
            android:textColor="@color/grey"
            android:textSize="18sp" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="1dp" android:background="@color/grey"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rl_help"
        android:layout_height="@dimen/actionbar_item_height">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/actionbar_height"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/body_padding_medium"
            android:drawablePadding="@dimen/intro_margin_5"
            android:gravity="center_vertical"
            android:text="帮助"
            android:textColor="@color/grey"
            android:textSize="15sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawablePadding="@dimen/intro_margin_5"
            android:drawableRight="@drawable/arrow_right"
            android:textColor="@color/grey"
            android:textSize="18sp" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="1dp" android:background="@color/grey"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rl_returnback"
        android:layout_height="@dimen/actionbar_item_height">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/actionbar_height"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/body_padding_medium"
            android:drawablePadding="@dimen/intro_margin_5"
            android:gravity="center_vertical"
            android:text="意见反馈"
            android:textColor="@color/grey"
            android:textSize="15sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawablePadding="@dimen/intro_margin_5"
            android:drawableRight="@drawable/arrow_right"
            android:textColor="@color/grey"
            android:textSize="18sp" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="1dp" android:background="@color/grey"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rl_about"
        android:layout_height="@dimen/actionbar_item_height">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/actionbar_height"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/body_padding_medium"
            android:drawablePadding="@dimen/intro_margin_5"
            android:gravity="center_vertical"
            android:text="关于"
            android:textColor="@color/grey"
            android:textSize="15sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawablePadding="@dimen/intro_margin_5"
            android:drawableRight="@drawable/arrow_right"
            android:textColor="@color/grey"
            android:textSize="18sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_height="1dp" android:background="@color/grey"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rl_pushsetting"
        android:layout_height="@dimen/actionbar_item_height">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/actionbar_height"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/body_padding_medium"
            android:drawablePadding="@dimen/intro_margin_5"
            android:gravity="center_vertical"
            android:text="消息推送设置"
            android:textColor="@color/grey"
            android:textSize="15sp" />
        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textOn="接收"
            android:textOff="关闭"
            android:checked="true"
            android:id="@+id/toggleButton"
            android:layout_centerVertical="true"
            android:drawablePadding="@dimen/intro_margin_5"
            android:textColor="@color/grey"
            android:textSize="18sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="1dp" android:background="@color/grey"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rl_exit"
        android:layout_height="@dimen/actionbar_item_height">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/actionbar_height"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/body_padding_medium"
            android:drawablePadding="@dimen/intro_margin_5"
            android:gravity="center_vertical"
            android:text="退出程序"
            android:textColor="@color/grey"
            android:textSize="15sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawablePadding="@dimen/intro_margin_5"
            android:drawableRight="@drawable/arrow_right"
            android:textColor="@color/grey"
            android:textSize="18sp" />

    </RelativeLayout>
</LinearLayout>
</ScrollView>
